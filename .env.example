###############################################
# Base
###############################################
DEBUG=true                     # Set false in production
DJANGO_SECRET_KEY=change_me    # Required; used by Django
ALLOWED_HOSTS=localhost,127.0.0.1  # Comma-separated; add your domain(s)

###############################################
# Database (choose one)
###############################################
# Option A: Use SQLite (easy local dev)
# USE_SQLITE=true

# Option B: Use DATABASE_URL (Heroku/Render/etc.)
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Option C: Explicit Postgres params (Docker Compose defaults)
POSTGRES_DB=app_db
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
DB_HOST=mendeleyev_db
DB_PORT=5432

###############################################
# Telegram Bot
###############################################
BOT_TOKEN=123456:ABC-DEF_fake_token
ADMINS=123456789              # Comma-separated list if multiple
TELEGRAM_WEBHOOK_DOMAIN=https://your-domain.example
TELEGRAM_WEBHOOK_PATH=/api/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=super_secret_header_token

###############################################
# Redis (optional; reserved for future use)
###############################################
REDIS_HOST=mendeleyev_redis
REDIS_PORT=6379
REDIS_DB=0

###############################################
# Misc
###############################################
LOG_LEVEL=INFO
ERROR_ALERTS_ENABLED=true
ERROR_ALERTS_ENABLED=true

